<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@drawable/tab"
        >




        <TextView
            android:id="@+id/gm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GOOD MORNING"
            android:textSize="40sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/editext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:hint="Enter your Name"
            android:inputType="textCapWords"
            android:layout_marginStart="20sp"
            />

        <TextView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="menu"
            android:layout_marginStart="20sp"
            android:paddingTop="20sp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="Capacinno"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic"
                />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="150sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:text="-"
                android:textColor="@color/white"
                android:onClick="decrement1"
                />

            <TextView
                android:id="@+id/capicinno"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:textColor="@color/black"
                android:paddingRight="10sp"
                android:text="0"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20sp"
                android:text="+"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:onClick="incremnet1"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="Espresso"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="161sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:text="-"
                android:textColor="@color/white"
                tools:ignore="HardcodedText"
                android:onClick="decrement2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"

                android:textColor="@color/black"
                android:id="@+id/espre"
                android:paddingRight="10sp"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20sp"
                android:text="+"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:onClick="incremnet2"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="Macchiato"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="150sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:text="-"
                android:textColor="@color/white"
                android:onClick="decrement3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:id="@+id/mach"
                android:textColor="@color/black"
                android:paddingRight="10sp"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20sp"
                android:text="+"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:onClick="incremnet3"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="Americano"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="149sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:text="-"
                android:textColor="@color/white"
                android:onClick="decrement4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:id="@+id/americano"
                android:textColor="@color/black"
                android:paddingRight="10sp"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20sp"
                android:text="+"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:onClick="incremnet4"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="Latte"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="197sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:text="-"
                android:textColor="@color/white"
                android:onClick="decrement5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:id="@+id/latte"
                android:paddingRight="10sp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20sp"
                android:text="+"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:onClick="incremnet5"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:text="Mocha"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="182sp"
                android:layout_marginTop="20sp"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:text="-"
                android:textColor="@color/white"
                android:onClick="decrement6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:id="@+id/mochaaa"
                android:paddingRight="10sp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20sp"
                android:text="+"
                android:backgroundTint="#4d4242"
                android:paddingBottom="10sp"
                android:onClick="incremnet6"
                />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add-0ns"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:textStyle="bold"
            />
        <CheckBox
            android:id="@+id/whipped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whipped Cream"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="10sp"
            android:textColor="@color/black"
            />
        <CheckBox
            android:id="@+id/chocosyrup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate Syrup"
            android:textSize="20sp"
            android:layout_marginStart="10sp"
            android:textColor="@color/black"
            />
        <CheckBox
            android:id="@+id/chocochips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choco Chips"
            android:textSize="20sp"
            android:layout_marginStart="10sp"
            android:textColor="@color/black"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ORDER SUMMARY"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp"
            android:textColor="@color/black"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="$0"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:onClick="displayPrice"
            />
        <Button
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20sp"
            android:text="Order"
            android:backgroundTint="#4d4242"
            android:onClick="submitOrder"
            />

    </LinearLayout>
</ScrollView>